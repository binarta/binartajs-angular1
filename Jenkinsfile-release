#!/usr/bin/env groovy

def urlEncode(String text) {
    URLEncoder.encode(text, "UTF-8")
}

pipeline {
    agent { label 'ubuntu-1604' }
    environment {
      GITUSER = credentials('2f0ed470-9d45-4f70-8fdc-d3baac3ec050')
    }
    parameters {
        choice(choices: 'patch\nminor\nmajor', description: 'What type of release?', name: 'TYPE')
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage 'show env', {
            steps {
                sh 'printenv'
            }
        }
        stage 'update npm', {
            steps {
                sh 'npm update'
            }
        }
        stage 'update bower', {
            steps {
                sh 'bower update'
            }
        }
        stage 'build', {
            steps {
                sh 'gulp'
            }
        }
        stage 'release', {
            when {
                expression {
                    GIT_BRANCH ==~ /origin\/master/
                }
            }
            stages {
                stage 'update version', {
                    steps {
                        sh "bower version ${params.TYPE}"
                    }

                }
                stage 'publish to git', {
                    steps {
                        sh('git push https://${urlEncode(GITUSER_USR)}:${urlEncode(GITUSER_PSW)}@github.com/binarta/binartajs-angular1 --tags')
                    }
                }
            }
        }
    }
    post {
        always {
            sh '''rm -rf node_modules & rm -rf bower_components'''
        }
    }
}